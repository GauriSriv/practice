#include<iostream>
using namespace std;
int occurance(int *a,int n,int i,int key)
{
    //base case
    if(i==n)
    {
        return -1;
    }
    
    //recursive function
    if(a[i]==key)
    {
        return i;
    }
    
    //find solution
    return occurance(a,n,i+1,key);
}
int main()
{
    int a[]={2,4,5,8,9,10};
    int n=sizeof(a)/sizeof(int);
    cout<<occurance(a,n,0,2)<<endl;
    return 0;
}
